<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	">

	<bean id="testAdvice" class="com.yicj.study.aop.advice.CountingBeforeAdvice" />

	<bean id="testAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
		<property name="advice" ref="testAdvice" />
	</bean>

	<bean id="testAop" class="org.springframework.aop.framework.ProxyFactoryBean" >
		<property name="proxyInterfaces" value="com.yicj.study.aop.foo.IHello" />
		<property name="target">
			<bean class="com.yicj.study.aop.foo.impl.HelloImpl" />
		</property>
		<property name="interceptorNames">
			<list>
				<value>testAdvisor</value>
			</list>
		</property>
	</bean>
</beans>